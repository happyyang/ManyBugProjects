<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background_ef"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_expectionicon_icon"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:background="@drawable/icon_nonet"
            />

        <TextView
            android:id="@+id/tv_expectiontext_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_expectionicon_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:gravity="center"
            android:lineSpacingMultiplier="2"
            android:text="@string/string_netconnect_nonet"
            android:textStyle="bold"
            android:textSize="@dimen/textsize_14" />

        <TextView
            android:id="@+id/tv_expectiontext_button"
            android:layout_width="135dp"
            android:layout_height="34dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:background="@drawable/shape_btn_roundcorner_55border"
            android:gravity="center"
            android:text="重新加载"
            android:textStyle="bold"
            android:textColor="@color/color_text_mediumcolor" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_view_exception"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"
        android:visibility="gone" />

</RelativeLayout>
